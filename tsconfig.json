{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@App/*": [
                "./src/*"
            ],
            "@/components/*": [
                "src/components/*"
            ],
            "@/data/*": [
                "./src/data/*"
            ],
            "@/lib/*": [
                "./src/lib/*"
            ],
            "@/styles/*": [
                "./src/styles/*"
            ]
        },
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/middleware.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}